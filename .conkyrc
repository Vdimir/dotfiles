alignment top_middle
background yes
xftalpha 0.8

cpu_avg_samples 2

draw_borders no
draw_graph_borders yes
draw_outline no

gap_x 20
gap_y 20

minimum_size 450 500
maximum_width 450

net_avg_samples 2

out_to_console no
out_to_stderr no
extra_newline no

#no_buffers yes
double_buffer yes
#
own_window yes
#own_window_title conky
#own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager
#own_window_argb_visual yes
#own_window_argb_value 0
own_window_type override
own_window_transparent yes

border_width 0
stippled_borders 0
update_interval 1
uppercase no
use_spacer none
show_graph_scale no
show_graph_range no

draw_graph_borders no

default_color black
default_outline_color white
